{
  "name": "simplebar",
  "title": "SimpleBar.js",
  "description": "Scrollbars, simpler.",
  "files": [
    "dist"
  ],
  "author": "Adrien Grsmto from a fork by Jonathan Nicol",
  "repository": {
    "type": "git",
    "url": "http://github.com/grsmto/simplebar.git"
  },
  "main": "dist/simplebar.cjs.js",
  "module": "dist/simplebar.esm.js",
  "browser": "dist/simplebar.umd.js",
  "homepage": "https://grsmto.github.io/simplebar/",
  "bugs": "https://github.com/grsmto/simplebar/issues",
  "version": "2.5.1",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "webpack-dev-server --inline",
    "start:prod": "NODE_ENV=production webpack-dev-server",
    "test": "jest"
  },
  "license": "MIT",
  "engines": {
    "node": ">=0.11.0"
  },
  "dependencies": {
    "core-js": "^2.5.3",
    "lodash.debounce": "^4.0.8",
    "object-assign": "^4.1.1",
    "resize-observer-polyfill": "^1.5.0",
    "scrollbarwidth": "^0.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "babel-jest": "^22.4.1",
    "eslint": "^4.18.2",
    "jest": "^20.0.4",
    "jest-cli": "^22.4.2",
    "rollup": "^0.56.5",
    "rollup-plugin-babel": "^4.0.0-beta.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-license": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.2.0",
    "webpack-dev-server": "^2.9.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/jest/cssTransform.js"
    }
  }
