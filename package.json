{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "cd packages/simplebar && yarn start",
    "build": "cd packages/simplebar && yarn run build",
    "build:react": "cd packages/simplebar-react && rollup -c",
    "dev": "cd packages/simplebar && yarn run dev",
    "test": "cd packages/simplebar && yarn run test",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^8.0.0-beta.2",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.0.4",
    "prettier": "^1.11.1",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.1"
  },
  "browserslist": [
    "> 0.25%",
    "not op_mini all"
  ],
  "lint-staged": {
    "src/*.{js,jsx,json}": [
      "prettier-eslint --single-quote --write",
      "git add"
    ]
  }
}
