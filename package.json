{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "webpack-dev-server --inline",
    "build": "cd packages/simplebar && rollup -c",
    "build:react": "cd packages/simplebar-react && rollup -c",
    "dev": "cd packages/simplebar && rollup -c -w",
    "test": "cd packages/simplebar && jest",
    "precommit": "lint-staged && npm run test"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-react": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.3",
    "babel-loader": "^8.0.0-beta.2",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.13",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-cli": "^22.4.2",
    "jest-puppeteer": "^2.3.0",
    "lint-staged": "^7.0.4",
    "prettier": "^1.11.1",
    "prettier-eslint": "^8.8.1",
    "prettier-eslint-cli": "^4.7.1",
    "puppeteer": "^1.2.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-select": "^1.2.1",
    "rollup": "^0.57.1",
    "rollup-plugin-babel": "^4.0.0-beta.4",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-license": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-uglify": "^3.0.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.1.3",
    "webpack-dev-server": "^3.1.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "preset": "jest-puppeteer",
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleFileExtensions": [
      "js"
    ]
  },
  "lint-staged": {
    "src/*.{js,jsx,json}": [
      "prettier-eslint --single-quote --write",
      "git add"
    ]
  }
}
