{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "overrides": [
        {
            "files": [
                "**/*.test.js"
            ],
            "env": {
                "jest": true,
                "jest/globals": true
            },
            "globals": {
                "page": true
            },
            "plugins": [
                "jest"
            ]
        }
    ]
}